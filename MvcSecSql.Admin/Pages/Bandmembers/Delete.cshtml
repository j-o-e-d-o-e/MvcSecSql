@page
@using Microsoft.AspNetCore.Identity
@using MvcSecSql.Data.Data.Entities
@inject SignInManager<User> SignInManager

@model DeleteModel
@{
    ViewData["Title"] = "Delete Bandmember";
}

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <h2>@ViewData["Title"]</h2>
            <page-button path="Bandmembers/Index" bootstrap-style="primary" glyph="info-sign" description="Back to List"></page-button>
            <page-button path="Bandmembers/Edit" bootstrap-style="success" glyph="pencil" description="Edit" id="@Model.Input.Id"></page-button>
            <page-button path="Index" bootstrap-style="warning" glyph="list-alt" description="Dashboard"></page-button> <p></p>
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Input.FirstName)</dt>
                <dd>@Html.DisplayFor(model => model.Input.FirstName)</dd>
                <dt>@Html.DisplayNameFor(model => model.Input.LastName)</dt>
                <dd>@Html.DisplayFor(model => model.Input.LastName)</dd>
                <dt>@Html.DisplayNameFor(model => model.Input.Instrument)</dt>
                <dd>@Html.DisplayFor(model => model.Input.Instrument)</dd>
                <dt>@Html.DisplayNameFor(model => model.Input.Band.Name)</dt>
                <dd>@Html.DisplayFor(model => model.Input.Band.Name)</dd>
            </dl>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @* <input type="hidden" asp-for="@Model.Input.Id" /> *@
                @* <input type="hidden" asp-for="Input.FirstName" /> *@
                @* <input type="hidden" asp-for="Input.LastName" /> *@
                @* <input type="hidden" asp-for="Input.BandId" /> *@
                @* <input type="hidden" asp-for="Input.Band.Name" /> *@
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
}
