@model GenreViewModel

@{
    ViewData["Title"] = "Genre";
}

<div class="membership top-margin course-content">
    <div class="row navigation-bar">
        <div class="col-sm-12">
            <a class="btn btn-primary" href="~/Membership/Dashboard">
                <span class="glyphicon glyphicon-menu-left"></span>
                Back to Dashboard
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="marquee" style="background-image: url('@Model.Genre.MarqueeImageUrl');">
                    <img src="@Model.Genre.GenreImageUrl"
                         class="cover-image">
                </div>
                <div class="panel-body">
                    <h1>@Model.Genre.GenreTitle</h1>
                    <h4 class="product-desc">
                        @Model.Genre.GenreDescription
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @for (var i = 0; i < 6; i++)
        {
            <div class="col-sm-3">
                @if (Model.Band != null)
                {
                    <a href="~/Membership/Band/1" style="text-decoration: none;">
                        @await Html.PartialAsync("_BandPartial", Model.Band)

                    </a>
                }
            </div>
        }
    </div>
</div>